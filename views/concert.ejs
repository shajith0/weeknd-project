<!DOCTYPE html>
<html lang="en">

    <head>
        <meta charset="UTF-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <meta name="viewport" content="width=device-width,initial-scale=1,user-scalable=no">

        <title>weeknd</title>
        <link rel="shortcut icon" href="assets/img/fav.png">
        <link rel="stylesheet" id="css-library" href="styles.css" media="all">
        <style>
            html,
            body,
            body *,
            a, a *,
            a:active,
            img,img * {
                cursor: url("assets/img/cursor/a-red.png"), auto !important;
            }
        </style>
        <!-- Fontawesome -->
        <script src="https://kit.fontawesome.com/f55a23c83c.js" crossorigin="anonymous"></script>

        <script src="scripts.js"></script>
    </head>
    <body id="weeknd" class="tour">

         <!-- Header -->
        <header id='main-header' class="animate__animated animate__fadeIn">

            <div class="nav-container">
                <a class="logo" href="index.html">
                    <h1>
                        Weeknd
                    </h1>
                </a>

                <div class="menu-content" id="menu">
                    <!-- Nav -->
                    <nav>
                        <a href="/" class="nav-home">
                            Home
                        </a>
                        <a href="/music" class="nav-music current" target="_blank" rel="noopener">
                            Music
                        </a>
                        <a href="/merch" class="nav-merch" target="_blank" rel="noopener">
                            Merch
                        </a>
                        <a href="/tour" class="nav-tour">
                            Tour
                        </a>
                       
                    </nav>
                    <!-- End Nav -->

                </div>
            </div>

        </header>
        <!-- End Header -->
        <main>
            <div class="container">
                <h1>
                    Tour
                </h1>
                <div id="dates">
                  <div class="event">
                    <div class="bit-details">
                        <div class="date">
                            <span class="month"><%= concert.month %></span>
                            <span class="day"><%= concert.day %></span>
                        </div>
                        <div class="loc">
                            <span class="venue">
                                <span><%= concert.venue %></span>
                            </span>
                            <span class="city">
                                <span><%= concert.city %></span>
                            </span>
                        </div>
                        <div class="tickets">
                            <a href="/bookings/<%=concert.id %>">ticket</a>
                          
                        </div>
                    </div>
                  </div>

                </div>
            </div>
        </main>


        <footer>
            <div class="rca">
                <a href="https://www.rcarecords.com" title="RCA">
                    <img src="assets/rca-ffffff.svg" alt="RCA Records">
                    <span class="sr-only">RCA Records</span>
                </a>
                <div class="disclaimer">
                    <p>
